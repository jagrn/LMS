@model IEnumerable<LMS.Models.StudentListViewModel>


@{
    ViewBag.Title = "Index";
}

@Html.Action("HeadBanner", "CommonLOs", new { origin = "StudentList", infoText = "Kursdeltagare" })

<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-9">
            <h4>Deltagare på kursen @ViewBag.CourseName </h4>
            <p>Antal elever: @ViewBag.Count</p>
            <table class="table">
                <tr>
                    <th>
                        <a href="@Url.Action("ListStudents",new { sortOrder = ViewBag.SortLastName })">@Html.DisplayNameFor(model => model.LastName)</a>


                    </th>
                    <th>
                        <a href="@Url.Action("ListStudents", new { sortOrder = ViewBag.SortFirstName })">@Html.DisplayNameFor(model => model.FirstName)</a>

                    </th>
                    <th>
                        <a href="@Url.Action("ListStudents", new { sortOrder = ViewBag.SortEmail })">@Html.DisplayNameFor(model => model.Email)</a>

                    </th>

                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>

                    </tr>
                }

            </table>
        </div>
    </div>

</div>

